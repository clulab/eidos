pipeline {
  agent any
  environment {
    _JAVA_OPTIONS = "-Xmx14g"
    JAVA_TOOL_OPTIONS = "-Dfile.encoding=UTF-8"
  }
  stages {
    stage('Test Scala') {
      steps {
        ansiColor('xterm') {
          echo "Testing Scala..."
          echo "_JAVA_OPTIONS is ${_JAVA_OPTIONS}"
          echo "JAVA_TOOL_OPTIONS is ${JAVA_TOOL_OPTIONS}"
        }
      }
    }
    stage('Test Python') {
      steps {
        ansiColor('xterm') {
          echo "Testing Python..."
          sh "sbt testPython"
        }
      }
    }
  }
}
